{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "es2016", "dom"],
    "sourceMap": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "target": "es6",
    "outDir":"dist",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/idb/lib",
      "@types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
